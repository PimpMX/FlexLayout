{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES2020",
        "target": "ES6",
        "stripInternal": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "types": ["vitest/globals"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*", "./examples/demo/*", "./tests/**/*"]
}
